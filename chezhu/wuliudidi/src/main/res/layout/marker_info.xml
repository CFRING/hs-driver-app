<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">    
    
    <LinearLayout 
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_5"
        android:layout_marginBottom="@dimen/height_5"
        android:layout_marginLeft="@dimen/width_6"
        android:layout_marginRight="@dimen/width_6"
        android:orientation="vertical">
        
        <TextView 
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/width_12"
	        android:singleLine="true"
	        android:textColor="@color/theme_color"
	        android:maxEms="16"
	        android:ellipsize="end"/>
        
        <TextView
	        android:id="@+id/snippet"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="@dimen/height_4"
	        android:textSize="@dimen/width_12"
	        android:singleLine="true"
	        android:textColor="@color/gray"
	        android:maxEms="16"
	        android:ellipsize="end"/>
    </LinearLayout>

    <ImageView 
        android:id="@+id/my_item_right"
        android:layout_width="@dimen/width_15"
        android:layout_height="@dimen/height_13"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/content_layout"
        android:layout_marginLeft="@dimen/width_9"
        android:layout_marginRight="@dimen/width_5"
        android:src="@drawable/my_item_right"
        android:visibility="gone"/>
</RelativeLayout>
