<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical" >

    <com.hongshi.wuliudidi.view.DiDiTitleView 
        android:id="@+id/report_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:layout_marginTop="@dimen/height_7"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_9"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/truck_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/width_12" />

            <TextView
                android:id="@+id/truck_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_4"
                android:textSize="@dimen/width_10"
                android:textColor="@color/light_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/goods_accont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_9"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/width_20" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/report_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:childDivider="@color/line_color"/>

</LinearLayout>