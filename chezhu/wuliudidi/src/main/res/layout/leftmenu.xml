<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_theme_color"
    android:clickable="false">

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_25" >

        <com.hongshi.wuliudidi.view.CircleImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/width_53"
            android:layout_height="@dimen/width_53"
            android:layout_marginLeft="@dimen/width_13"
            android:src="@drawable/default_photo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_9"
            android:layout_toRightOf="@id/photo"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/right_arrow_image"
            android:layout_width="@dimen/width_8"
            android:layout_height="@dimen/height_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_13"
            android:background="@drawable/my_item_right" />
    </RelativeLayout>

    <View
        android:id="@+id/long_line_"
        style="@style/long_line_"
        android:layout_below="@id/user"
        android:layout_marginLeft="@dimen/width_13"
        android:layout_marginTop="@dimen/height_11" />

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/name_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/long_line_"/>
    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/licence_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_auth"/>
    <View
        android:id="@+id/long_line_1"
        style="@style/long_line_"
        android:layout_marginLeft="@dimen/width_13"
        android:layout_below="@id/licence_auth"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/my_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/long_line_1"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/my_trucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_route"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/my_drivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_trucks"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/my_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_drivers"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_integral"/>
    <View
        android:id="@+id/long_line_2"
        style="@style/long_line_"
        android:layout_marginLeft="@dimen/width_13"
        android:layout_below="@id/income"/>
    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/scan_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/long_line_2"/>

    <com.hongshi.wuliudidi.view.MenuItemView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_entry"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp">

        <com.hongshi.wuliudidi.view.MenuItemView
            android:id="@+id/truck_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.hongshi.wuliudidi.view.MenuItemView
            android:id="@+id/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>