<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_background_color_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_33" 
    android:minWidth="@dimen/width_320">

    <ImageView
        android:id="@+id/my_item_icon"
        android:layout_width="@dimen/width_20"
        android:layout_height="@dimen/height_17"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_9" />

    <TextView
        android:id="@+id/my_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_9"
        android:layout_toRightOf="@id/my_item_icon"
        android:textColor="@color/gray"
        android:textSize="@dimen/width_12" />

    <TextView
        android:id="@+id/my_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_9"
        android:layout_toRightOf="@id/my_item_title"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/width_12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/authentication_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_13"
        android:layout_toRightOf="@+id/my_item_title"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/one_image"
            android:layout_width="@dimen/width_17"
            android:layout_height="@dimen/height_15"
            android:src="@drawable/id_none" />

        <ImageView
            android:id="@+id/two_image"
            android:layout_width="@dimen/width_17"
            android:layout_height="@dimen/height_15"
            android:layout_marginLeft="@dimen/height_9"
            android:src="@drawable/drive_none" />

        <ImageView
            android:id="@+id/three_image"
            android:layout_width="@dimen/width_17"
            android:layout_height="@dimen/height_15"
            android:layout_marginLeft="@dimen/height_9"
            android:src="@drawable/license_none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/width_9"
        android:layout_toLeftOf="@+id/my_right_icon"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_15"
            android:background="@drawable/news"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_right_icon"
        android:layout_width="@dimen/width_17"
        android:layout_height="@dimen/height_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/width_9"
        android:src="@drawable/my_item_right" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>