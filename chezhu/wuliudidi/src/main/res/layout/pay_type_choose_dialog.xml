<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="203dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_pay_type"
            android:layout_alignBottom="@id/back"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <View
            android:id="@+id/divide_line0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_below="@id/back"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:id="@+id/cash_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/divide_line0">
            <ImageView
                android:id="@+id/cash_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/cash_icon_0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/cash_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金余额"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/cash_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/cash_icon" />
            <TextView
                android:id="@+id/cash_can_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额元"
                android:textColor="@color/light_grey"
                android:textSize="14sp"
                android:layout_below="@id/cash_tip"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/cash_tip"/>
            <ImageView
                android:id="@+id/selected0"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:src="@drawable/account_selected_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/divide_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/cash_account"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RelativeLayout
            android:id="@+id/tyre_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/divide_line1">
            <ImageView
                android:id="@+id/tyre_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tyre_icon_0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tyre_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轮胎余额"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/tyre_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/tyre_icon" />
            <TextView
                android:id="@+id/tyre_can_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额元"
                android:textColor="@color/light_grey"
                android:textSize="14sp"
                android:layout_below="@id/tyre_tip"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/tyre_tip"/>
            <ImageView
                android:id="@+id/selected1"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:src="@drawable/account_selected_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/divide_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tyre_account"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RelativeLayout
            android:id="@+id/oil_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/divide_line2">
            <ImageView
                android:id="@+id/oil_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/oil_icon_0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/oil_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油卡余额"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/oil_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/oil_icon" />
            <TextView
                android:id="@+id/oil_can_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额元"
                android:textColor="@color/light_grey"
                android:textSize="14sp"
                android:layout_below="@id/oil_tip"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/oil_tip"/>
            <ImageView
                android:id="@+id/selected2"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:src="@drawable/account_selected_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/divide_line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/oil_account"
            android:layout_marginTop="10dp"
            android:background="@color/line_color" />
        <RelativeLayout
            android:id="@+id/consume_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/divide_line3">
            <ImageView
                android:id="@+id/consume_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/consume_account_icon_my_wallet"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/consume_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费账户余额"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toRightOf="@id/consume_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/consume_icon" />
            <TextView
                android:id="@+id/consume_can_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额元"
                android:textColor="@color/light_grey"
                android:textSize="14sp"
                android:layout_below="@id/consume_tip"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/consume_tip"/>
            <ImageView
                android:id="@+id/selected3"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:src="@drawable/account_selected_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>