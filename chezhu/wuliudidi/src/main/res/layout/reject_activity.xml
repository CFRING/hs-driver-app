<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical" >

    <com.hongshi.wuliudidi.view.DiDiTitleView
        android:id="@+id/reject_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_7"
        android:background="@color/white"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/reject_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="@null"
            android:numColumns="2"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/reject_info"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_86"
            android:layout_marginLeft="@dimen/width_13"
            android:layout_marginRight="@dimen/width_13"
            android:layout_marginTop="@dimen/height_7"
            android:background="@color/background_gray"
            android:textSize="@dimen/width_12" />

        <TextView
            android:id="@+id/reject_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_22"
            android:layout_marginLeft="@dimen/width_13"
            android:layout_marginTop="@dimen/height_7"
            android:textSize="@dimen/width_12" />
    </LinearLayout>

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/my_contact_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_7" />

</LinearLayout>