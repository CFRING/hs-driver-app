<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="本月"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="@color/transit_record_overview_grey"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/light_grey"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:layout_below="@id/day"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:id="@+id/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_below="@id/time"/>
        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tyre_icon_0"
            android:layout_toRightOf="@id/day"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/consume_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toRightOf="@id/type_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp" />
        <TextView
            android:id="@+id/consume_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:layout_below="@id/consume_money"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@id/consume_money"/>
        <ImageView
            android:id="@+id/wait_to_pay"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>
        <!--<ImageView-->
            <!--android:id="@+id/revoke"-->
            <!--android:layout_width="65dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:src="@drawable/wait_to_pay_tip"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="40dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:visibility="gone"/>-->
    </RelativeLayout>

</LinearLayout>