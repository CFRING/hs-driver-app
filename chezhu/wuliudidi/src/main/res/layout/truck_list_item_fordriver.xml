<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/height_36"
        android:layout_height="@dimen/height_36"
        android:layout_marginLeft="@dimen/width_9"
        android:src="@drawable/truck"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/height_10"
        android:layout_marginBottom="@dimen/height_10"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_9"
        android:layout_toRightOf="@id/icon_image"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/height_10">

        <TextView
            android:id="@+id/licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="asdf"
            android:textColor="@color/black"
            android:textSize="@dimen/width_12" />

        <LinearLayout
            android:id="@+id/detail_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/truck_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asdf"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/width_10" />

            <TextView
                android:id="@+id/truck_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_9"
                tools:text="asdf"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/width_10" />

            <TextView
                android:id="@+id/truck_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_9"
                tools:text="asdf"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/width_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_text_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/truck_max_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asdf"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/width_10" />

            <TextView
                android:id="@+id/truck_max_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_9"
                tools:text="asdf"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/width_10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/icon_image"
        android:layout_marginRight="@dimen/width_9"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_11"
            android:layout_marginRight="@dimen/width_7"
            android:background="@drawable/guan_lian_driver" />

        <TextView
            android:id="@+id/driver_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="关联司机 4 人"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/width_10" />

    </LinearLayout>
</RelativeLayout>