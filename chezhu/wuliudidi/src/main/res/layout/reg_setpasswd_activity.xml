<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">
    
    <com.hongshi.wuliudidi.view.DiDiTitleView
        android:id="@+id/set_passwd_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"/>
    
    
	<RelativeLayout
	    android:id="@+id/passwd_line"
	    android:layout_width="@dimen/width_248"
	    android:layout_height="@dimen/height_43"
	    android:layout_below="@id/set_passwd_title"
	    android:layout_marginTop="@dimen/height_32"
	    android:layout_centerHorizontal="true">
	    
    	<ToggleButton
	   	    android:id="@+id/passwd_visibility"
	   	    android:layout_height="@dimen/height_14"
	   	    android:layout_width="@dimen/width_17"
	   	    android:layout_alignParentBottom="true"
	        android:layout_marginBottom="@dimen/height_7"
	   	    android:layout_alignParentRight="true"
	   	    android:background="@drawable/visivility_togglebtn_style"
	   	    android:checked="false"
	   	    android:textOn=""
	   	    android:textOff=""/>
    
	    <EditText 
	        android:id="@+id/passwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/passwd_visibility"
	        android:layout_toLeftOf="@id/passwd_visibility"
	        android:background="@null"
	        android:hint="@string/input_new_password"
	        android:textColorHint="@color/light_grey"
	        android:textSize="16sp"
	        android:inputType="textPassword"
	        android:textColor="@color/black"/>
	    	
	   	<View 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="1px"
	   	    android:background="@color/gray"
	   	    android:layout_alignParentBottom="true"/>
	</RelativeLayout>
	
	
	<RelativeLayout
	    android:id="@+id/confirm_passwd_line"
	    android:layout_width="@dimen/width_248"
	    android:layout_height="@dimen/height_43"
	    android:layout_below="@id/passwd_line"
	    android:layout_centerHorizontal="true">
	    
	    <ToggleButton
	   	    android:id="@+id/confirm_passwd_visibility"
	   	    android:layout_height="@dimen/height_14"
	   	    android:layout_width="@dimen/width_17"
	   	    android:layout_alignParentBottom="true"
	        android:layout_marginBottom="@dimen/height_7"
	   	    android:layout_alignParentRight="true"
	   	    android:background="@drawable/visivility_togglebtn_style"
	   	    android:checked="false"
	   	    android:textOn=""
	   	    android:textOff=""/>
	    
	    <EditText 
	        android:id="@+id/confirm_passwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/confirm_passwd_visibility"
	        android:layout_toLeftOf="@id/confirm_passwd_visibility"
	        android:background="@null"
	        android:hint="@string/input_comfirm_password"
	        android:textColorHint="@color/light_grey"
	        android:inputType="textPassword"
	        android:textSize="16sp"
	        android:textColor="@color/black"/>
	    	
	   	<View 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="1px"
	   	    android:background="@color/gray"
	   	    android:layout_alignParentBottom="true"/>
	</RelativeLayout>
	
	<Button 
	    	android:id="@+id/finish"
	    	android:layout_height="@dimen/height_33"
	    	android:layout_width="@dimen/width_248"
	    	android:layout_centerHorizontal="true"
	    	android:layout_below="@id/confirm_passwd_line"
	    	android:layout_marginTop="@dimen/height_22"
	    	android:text="@string/finish"
	    	android:textColor="@color/white"
	    	android:background="@drawable/solid_btn_style"/>
	
	<ImageView 
	    android:layout_width="@dimen/width_152"
	    android:layout_height="@dimen/height_150"
	    android:src="@drawable/background"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"/>
</RelativeLayout>
