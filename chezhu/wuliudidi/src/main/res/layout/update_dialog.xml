<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_219"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_rocket_image"
            android:layout_width="@dimen/width_219"
            android:layout_height="@dimen/height_90"
            android:src="@drawable/version_update_rocket"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/width_17"
            android:layout_height="@dimen/width_17"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/width_20"
            android:layout_alignBottom="@id/top_rocket_image"
            android:background="@drawable/version_update_cancel"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/width_15"
            android:textColor="@color/black"
            android:text="发现新版本"/>

        <TextView
            android:id="@+id/update_content"
            android:layout_below="@id/update_title"
            android:layout_marginTop="@dimen/height_10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_10"
            android:singleLine="false"
            android:paddingLeft="@dimen/width_21"
            android:paddingRight="@dimen/width_21"
            android:textSize="@dimen/width_12"
            android:textColor="@color/light_grey"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_37"
        android:background="@drawable/version_update_dialog_botton">

        <Button
            android:id="@+id/update_button"
            android:layout_width="@dimen/width_82"
            android:layout_height="@dimen/height_24"
            android:layout_centerInParent="true"
            android:background="@drawable/version_update_button"/>
    </RelativeLayout>
</LinearLayout>
