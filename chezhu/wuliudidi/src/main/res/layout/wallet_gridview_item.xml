<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/height_72"
    android:background="@drawable/item_background_color_style" >
    
    <ImageView 
        android:id="@+id/image"
        android:layout_width="@dimen/width_21"
        android:layout_height="@dimen/width_21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_18"/>
    
    <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/width_13"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:layout_marginTop="@dimen/height_10"
        android:layout_marginBottom="@dimen/height_14"/>
    
    <ImageView 
        android:id="@+id/hint_image"
        android:layout_width="@dimen/width_39"
        android:layout_height="@dimen/width_39"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/coming_soon"
        android:visibility="gone"/>
</RelativeLayout>
