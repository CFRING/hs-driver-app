<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_layout"
    android:layout_width="match_parent"
    android:minHeight="@dimen/height_33"
    android:background="@drawable/edittext_style" >

    <TextView
        android:id="@+id/edit_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_13"
        android:textColor="@color/black"
        android:textSize="@dimen/width_12" />

    <EditText
        android:id="@+id/edit_content_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_9"
        android:layout_toRightOf="@+id/edit_name_text"
        android:background="@color/white"
        android:textColor="@color/gray"
        android:textColorHint="@color/light_grey"
        android:inputType="numberDecimal"
        android:textSize="@dimen/width_12" />

    <TextView
        android:id="@+id/unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/width_13"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="@dimen/width_12" />

</RelativeLayout>