<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">

    <com.hongshi.wuliudidi.view.DiDiTitleView
        android:id="@+id/payment_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/app_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_style"/>
    <TextView
        android:id="@+id/payee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxx"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="##############"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/change_account_type_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/account_type_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现金余额"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/change_account_type"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/change_account_type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/my_item_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款金额"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_alignLeft="@id/tip"
            android:layout_below="@id/tip"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/ti_xian_money_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:inputType="numberDecimal"
            android:maxLength="12"
            android:layout_toRightOf="@id/rmb"
            android:layout_alignBottom="@id/rmb"
            android:textCursorDrawable = "@drawable/edit_cursor_bg"
            android:paddingBottom="1px"
            android:background="@color/white"
            android:hint=""/>
        <ImageView
            android:id="@+id/money_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_delete"
            android:layout_alignBottom="@id/ti_xian_money_edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <View
            android:id="@+id/divide_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/list_item_line"
            android:layout_below="@id/rmb"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/tips_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLength="50"
            android:layout_below="@id/divide_line1"
            android:paddingBottom="1px"
            android:background="@color/white"
            android:hint="添加备注(50字以内)"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignLeft="@id/rmb"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/sure_to_pay"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/sure_to_pay"
        android:textColor="@color/white"
        android:background="@drawable/solid_btn_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>