<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:background="@color/white"
	android:minHeight="68dp">
    
    <ImageView
		android:id="@+id/truck_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/truck"
		android:layout_centerVertical="true"/>
    
    <LinearLayout
		android:id="@+id/material_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:layout_toRightOf="@id/truck_icon"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
		android:layout_alignTop="@id/truck_icon"
		android:layout_marginTop="3dp">
        
         <TextView
	        android:id="@+id/licence"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="@dimen/width_12"/>
        
         <LinearLayout 
             android:id="@+id/detail_text_layout"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginTop="@dimen/height_4"
             android:orientation="horizontal">
             
             <TextView
		        android:id="@+id/truck_model"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/light_grey"
		        android:textSize="@dimen/width_12" />
             
             <TextView
		        android:id="@+id/truck_length"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/width_9"
		        android:textColor="@color/light_grey"
		        android:textSize="@dimen/width_12" />
		
		    <TextView
		        android:id="@+id/truck_max_weight"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/width_9"
		        android:textColor="@color/light_grey"
		        android:textSize="@dimen/width_12" />
		</LinearLayout>
    </LinearLayout>



	<ImageView
		android:id="@+id/audit_state"
		android:layout_width="@dimen/width_34"
		android:layout_height="@dimen/height_14"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/width_9"
		android:src="@drawable/audit_doing" />

	<ImageView
		android:id="@+id/complete_material"
		android:layout_width="55dp"
		android:layout_height="20dp"
		android:src="@drawable/zlbq"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/audit_state"
		android:layout_marginRight="10dp"/>

	<RelativeLayout
		android:id="@+id/forbid_icon_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#7fffffff"
		android:visibility="visible"
		android:layout_centerVertical="true">
		<ImageView
			android:id="@+id/forbid_icon"
			android:layout_width="70dp"
			android:layout_height="54dp"
			android:src="@drawable/jzjd"
			android:layout_centerInParent="true" />
	</RelativeLayout>
</RelativeLayout>