<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_background" >

    <com.hongshi.wuliudidi.view.DiDiTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    
    <ImageView
        android:id="@+id/hook_image"
        android:layout_width="@dimen/width_77"
        android:layout_height="@dimen/height_65"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_72"
        android:src="@drawable/hook" />

    <TextView
        android:id="@+id/check_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hook_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_11"
        android:textColor="@color/gray"
        android:text="@string/submit_success"
        android:textSize="@dimen/width_15" />
    
    <TextView 
        android:id="@+id/check_text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_11"
        android:textColor="@color/light_grey"
        android:text="@string/we_will_audit_as_soon"
        android:textSize="@dimen/width_12"/>

    <ImageView
        android:id="@+id/continue_image"
        android:layout_width="@dimen/width_102"
        android:layout_height="@dimen/height_33"
        android:layout_below="@+id/check_text_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_18"
        android:src="@drawable/confirm_button_style"/>

</RelativeLayout>