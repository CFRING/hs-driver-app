<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_gray_item">

    <ImageView
        android:id="@+id/bank_image"
        android:layout_width="@dimen/width_22"
        android:layout_height="@dimen/width_22"
        android:layout_marginLeft="@dimen/width_13"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/height_13"
        android:layout_marginBottom="@dimen/height_13"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sdk_black"
        android:textSize="@dimen/width_12"
        android:layout_marginLeft="@dimen/width_15"
        android:layout_gravity="center_vertical"/>

</LinearLayout>