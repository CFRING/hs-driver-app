<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/width_320"
        android:layout_height="@dimen/width_320"
        android:layout_marginTop="@dimen/height_72"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_126"
        android:layout_gravity="bottom"
         >

        <TextView
            android:id="@+id/start_again"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_25"
            android:gravity="center_horizontal"
            android:text="重拍"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_25"
            android:layout_alignParentRight="true"
            android:text="使用照片"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>