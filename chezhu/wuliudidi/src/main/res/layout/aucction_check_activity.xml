<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background" >

    <com.hongshi.wuliudidi.view.DiDiTitleView
        android:id="@+id/auction_check_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/hook_image"
        android:layout_width="@dimen/width_77"
        android:layout_height="@dimen/height_65"
        android:layout_below="@+id/auction_check_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_33"
        android:src="@drawable/hook" />

    <TextView
        android:id="@+id/check_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hook_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_30"
        android:text="@string/auction_check"
        android:textColor="@color/gray"
        android:textSize="@dimen/width_13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_22"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/continue_image"
            android:layout_width="@dimen/width_102"
            android:layout_height="@dimen/height_33"
            android:src="@drawable/continue_auction" />

        <ImageView
            android:id="@+id/see_image"
            android:layout_width="@dimen/width_102"
            android:layout_height="@dimen/height_33"
            android:layout_marginLeft="@dimen/width_17"
            android:src="@drawable/see_task" />
    </LinearLayout>

</RelativeLayout>