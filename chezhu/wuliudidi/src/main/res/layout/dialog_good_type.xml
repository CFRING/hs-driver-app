<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_214"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/width_13"
        android:textSize="@dimen/width_13"
        android:textColor="@color/black"
        android:text="@string/good_type"/>

    <GridView
        android:id="@+id/good_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:columnWidth="@dimen/width_89"
        android:numColumns="2"
        android:background="@color/white"
        android:verticalSpacing="@dimen/width_9"
        android:horizontalSpacing="@dimen/width_9"
        android:listSelector="#00000000"
        android:layout_below="@id/title_text"
        android:layout_alignLeft="@id/title_text"
        android:layout_marginRight="@dimen/width_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_38"
        android:layout_alignParentBottom="true">
        <!--重置-->
        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/width_16"
            android:textColor="@color/black"
            android:text="@string/reset"
            android:background="@color/auction_line_color"/>

        <!--确定-->
        <Button
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/width_16"
            android:textColor="@color/white"
            android:text="@string/good_type_sure"
            android:background="@color/home_text_press"/>
    </LinearLayout>

</RelativeLayout>