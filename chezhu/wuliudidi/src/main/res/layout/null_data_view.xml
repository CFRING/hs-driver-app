<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/data_error_image"
        android:layout_width="@dimen/width_131"
        android:layout_height="@dimen/height_91"
        android:src="@drawable/crying_lion"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/data_none_image"
        android:layout_width="@dimen/width_77"
        android:layout_height="@dimen/height_65"
        android:src="@drawable/empty" />

    <TextView
        android:id="@+id/info_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_11"
        android:textColor="@color/gray"
        android:textSize="@dimen/width_15" />
    <TextView
        android:id="@+id/info_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_11"
        android:textColor="@color/light_grey"/>

    <Button
        android:id="@+id/info_image"
        android:layout_width="@dimen/width_102"
        android:layout_height="@dimen/height_33"
        android:layout_marginTop="@dimen/height_11"
        android:visibility="gone"
        android:background="@drawable/add_truck" />

</LinearLayout>