<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_32"
        android:paddingLeft="@dimen/width_9"
        android:paddingRight="@dimen/width_9" >
        
        <ImageView 
            android:id="@+id/item_mark_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mentha_green_circle"
            android:layout_centerVertical="true"/>
        
        <TextView
            android:id="@+id/item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_mark_image"
            android:layout_marginLeft="@dimen/width_9"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/width_12"/>
        
        <LinearLayout 
            android:id="@+id/photograph_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/photograph_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_12"
                android:textColor="@color/theme_color"/>
            
            <ImageView 
                android:layout_width="@dimen/width_11"
                android:layout_height="@dimen/height_13"
                android:layout_marginLeft="@dimen/width_11"
                android:src="@drawable/my_item_right"/>
        </LinearLayout>
            
        <View 
            style="@style/line_bottom_thin"/>
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/photo_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/little_photo_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/height_11"
            android:layout_marginBottom="@dimen/height_11"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        
        <ImageView 
            android:id="@+id/large_photo_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/height_11"
            android:layout_marginBottom="@dimen/height_11"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
