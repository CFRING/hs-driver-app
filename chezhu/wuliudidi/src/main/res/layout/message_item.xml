<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/item_background_color_style" >

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/system_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/un_read_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/point"
            android:layout_marginTop="22dp"
            android:layout_alignRight="@id/message_image"
            android:layout_marginRight="-2dp"/>

    <TextView
        android:id="@+id/message_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="系统消息"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@id/message_image"/>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/litttle_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/text_on_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="@string/contact_number"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"
        android:visibility="gone"/>

</RelativeLayout>