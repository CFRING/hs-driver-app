<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/photo_example_layout"
        android:layout_width="@dimen/width_303"
        android:layout_height="@dimen/width_303"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_25"
            android:background="@color/theme_color"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/example_image"
                android:layout_width="@dimen/width_18"
                android:layout_height="@dimen/height_14"
                android:layout_marginLeft="@dimen/width_17"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="示例图片"
                android:textColor="@color/white"
                android:textSize="@dimen/width_15"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/example_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_32"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_button_above"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_32"
        android:background="@drawable/dialog_button_below"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />
    
    <Button
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_32"
        android:background="@drawable/dialog_button_below"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_32"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_button_cancel"
        android:text="@string/cancel"
        android:textColor="@color/title_background"
        android:textSize="18sp" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/height_7"-->
        <!--android:background="@android:color/transparent" />-->

</LinearLayout>
