<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_background"
    android:orientation="vertical" >
    <com.hongshi.wuliudidi.view.DiDiTitleView 
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/change_password_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/change_phone_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_alarm_tip"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_9"/>
        <ToggleButton
            android:id="@+id/voice_switch"
            android:layout_width="@dimen/width_43"
            android:layout_height="@dimen/height_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/togglebutton_onoff_style" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/transit_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/update_version_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/opinion_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <com.hongshi.wuliudidi.view.MyItemView
        android:id="@+id/about_item"
        android:layout_width="@dimen/width_320"
        android:layout_height="wrap_content" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_33"
        android:layout_marginTop="@dimen/height_7"
        android:background="@color/white"
        android:textSize="@dimen/width_12"
        android:textColor="@color/theme_color"
        android:text="退出登录" />

</LinearLayout>