<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="279dp"
    android:layout_height="159dp"
    android:layout_gravity="center"
    android:background="@drawable/cancel_bg" >

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/b_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_route_cancel"
            android:textSize="17dp"
            android:textColor="#0099ff" />

        <View style="@style/line_height_thin" />

        <TextView
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17dp"
            android:text="@string/my_route_sure"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View
        style="@style/line_bottom"
        android:layout_above="@id/b_layout" />

</RelativeLayout>