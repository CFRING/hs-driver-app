<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background">
        <com.hongshi.wuliudidi.incomebook.DiDiTitleView
            android:id="@+id/income_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/electronic_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="电子对账单"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <!--<View-->
            <!--android:layout_height="2px"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_below="@id/electronic_bill"-->
            <!--android:background="#ffffff"-->
            <!--android:layout_alignLeft="@id/electronic_bill"-->
            <!--android:layout_alignRight="@id/electronic_bill"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@color/theme_color" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收入(元)"
                android:textColor="#ff9999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zongshouru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已结算"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/yijiesuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="##"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:background="#ff9999" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未结算"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weijiesuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="##"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- 运输记录次数 -->
    <RelativeLayout
        android:id="@+id/record_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <View style="@style/line_bottom" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运输记录(次)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>

        <View style="@style/line_bottom_thin" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/my_item_right" />
    </RelativeLayout>

    <!-- 工资油费 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工资(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gongzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/youfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_bottom" />
    <!-- 轮胎租赁 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轮胎费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/luntaifei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租赁费/维修费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zulin_weixiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:text="##"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_bottom" />
    <!-- 通行运费-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通行费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tongxingfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yunfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_bottom" />

    <!-- 劳务费 + 其他费用-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="劳务费(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/laowufei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他(元)"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_bottom" />

</LinearLayout>